#!/usr/bin/make -f
export DH_VERBOSE = 1
export DH_GOPKG:=github.com/erick0z/runtime
export DEB_BUILD_OPTIONS=nocheck
export PATH=$PATH:/usr/local/go/bin
export GOPATH=/usr/src/packages/BUILD/go
%:
	dh $@

override_dh_auto_build:
	mkdir -p /usr/src/packages/BUILD/go/src/github.com/erick0z/
	tar xzf /usr/src/packages/SOURCES/go1.8.3.linux-amd64.tar.gz -C /usr/local
	ln -s /usr/src/packages/BUILD/ /usr/src/packages/BUILD/go/src/github.com/erick0z/runtime
	make

install:
	make install

